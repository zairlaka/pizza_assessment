<%= form_with(model: order) do |form| %>
  <% if order.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(order.errors.count, "error") %> prohibited this order from being saved:</h2>

      <ul>
        <% order.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%# form.label :total_price, style: "display: block" %>
    <%# form.text_field :total_price %>
  </div>

  <div>
    <%# form.label :total_discount, style: "display: block" %>
    <%# form.text_field :total_discount %>
  </div>

  <div>
    <%# form.label :status, style: "display: block" %>
    <%# form.number_field :status %>
  </div>

  <div>
    <%= form.label :size, style: "display: block" %>
    <%= form.select :size, Order.sizes.collect { |k,v| [k, k] } %>

  </div>
  <br>
  <span>Please Enter Coupon or Promotion code, if you have any.</span>
  <div>
    <%= form.label :coupon_id, style: "display: block" %>
    <%= form.text_field :coupon_id, value: form.object.coupon.code %>
  </div>

  <div>
    <%= form.label :promotion_id, style: "display: block" %>
    <%= form.text_field :promotion_id, value: form.object.promotion&.code %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
